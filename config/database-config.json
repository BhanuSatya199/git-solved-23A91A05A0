{
  "application": {
    "name": "DevOpsSimulator",
    "version": "1.0.0",
    "environment": "production"
  },
  "server": {
    "host": "0.0.0.0",
    "port": 8080,
    "ssl_enabled": true
  },
  "logging": {
    "level": "INFO",
    "format": "json",
    "output": "/var/log/app.log"
  },
  "database": {
    "production": {
      "connection": {
        "host": "prod-db.example.com",
        "port": 5432,
        "database": "devops_production",
        "ssl_mode": "require",
        "pool_size": 20
      },
      "backup": {
        "enabled": true,
        "schedule": "0 2 * * *",
        "retention_days": 30
      }
    },
    "development": {
      "connection": {
        "host": "localhost",
        "port": 5432,
        "database": "devops_development",
        "ssl_mode": "disable",
        "pool_size": 5
      },
      "backup": {
        "enabled": false,
        "schedule": "manual"
      },
      "features": {
        "seed_data": true,
        "debug_queries": true
      }
    }
  },
  "features": {
    "auto_scaling": true,
    "load_balancer": "enabled",
    "backup_enabled": true,
    "experimental_features": true
  },
  "development": {
    "mock_external_apis": true,
    "debug_mode": true,
    "cors_enabled": true
  },
  "notifications": {
    "slack_webhook": "https://hooks.slack.com/services/XXX",
    "discord_webhook": "https://discord.com/api/webhooks/YYY",
    "email_alerts": false
  }
}
